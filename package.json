{
  "name": "node-server-monorepo-starter",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "check-types": "turbo run check-types",
    "dev:rest-api": "turbo run dev --filter=rest-api",
    "dev:mcp-api": "turbo run dev --filter=mcp-api",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "turbo run lint --filter=rest-api --filter=mcp-api",
    "pre-commit": "lint-staged",
    "test": "turbo test"
  },
  "devDependencies": {
    "lint-staged": "^16.0.0",
    "prettier": "^3.5.3",
    "turbo": "^2.5.3",
    "typescript": "5.8.2"
  },
  "packageManager": "pnpm@10.10.0",
  "engines": {
    "node": "22"
  }
}

{
  "name": "node-server-monorepo-starter",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "check-types": "turbo run check-types",
    "dev:internal-api": "turbo watch dev --filter=internal-api",
    "dev:public-api": "turbo watch dev --filter=public-api",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "turbo run lint",
    "lint:staged": "lint-staged",
    "test": "turbo test"
  },
  "devDependencies": {
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "turbo": "^2.5.6",
    "typescript": "5.8.2"
  },
  "packageManager": "pnpm@10.15.1",
  "engines": {
    "node": "22"
  }
}
